    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Valentine's Love Letter üíå</title>
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background: #ffdfdf;
            font-family: 'Arial', sans-serif;
            margin: 0;
            overflow: hidden;
            animation: bgAnimation 15s infinite;
        }

        @keyframes bgAnimation {
            0% { background-color: #ffdfdf; }
            50% { background-color: #ffb3b3; }
            100% { background-color: #ffdfdf; }
        }

        .envelope {
            position: relative;
            width: 320px;
            height: 220px;
            background: #ff6b81;
            border-radius: 10px;
            display: flex;
            justify-content: center;
            align-items: flex-end;
            overflow: hidden;
            box-shadow: 5px 5px 15px rgba(0, 0, 0, 0.2);
            animation: envelopeAnimation 1s ease-out;
        }

        @keyframes envelopeAnimation {
            from { transform: scale(0); opacity: 0; }
            to { transform: scale(1); opacity: 1; }
        }

        .flap {
            position: absolute;
            top: 0;
            width: 0;
            height: 0;
            border-left: 150px solid transparent;
            border-right: 150px solid transparent;
            border-bottom: 100px solid #ff4757;
            transition: 0.5s ease-in-out;
            transform-origin: top;
        }

        .letter {
            position: absolute;
            width: 90%;
            height: 70%;
            background: white;
            border-radius: 5px;
            padding: 20px;
            text-align: center;
            transform: translateY(100%);
            transition: transform 0.5s ease-in-out;
            opacity: 0;
        }

        .envelope.open .letter {
            transform: translateY(0);
            opacity: 1;
        }

        .envelope.open .flap {
            transform: rotateX(180deg);
        }

        h1 {
            font-size: 22px;
            color: red;
            margin-bottom: 20px;
            animation: textAnimation 2s ease-in-out;
        }

        @keyframes textAnimation {
            from { transform: translateY(-100px); opacity: 0; }
            to { transform: translateY(0); opacity: 1; }
        }

        .buttons {
            margin-top: 20px;
            display: flex;
            justify-content: space-evenly;
        }

        button {
            font-size: 18px;
            padding: 10px 20px;
            border: none;
            cursor: pointer;
            border-radius: 10px;
            transition: 0.3s;
            opacity: 0;
            animation: buttonFadeIn 1s ease-in-out forwards;
        }

        @keyframes buttonFadeIn {
            from { opacity: 0; transform: scale(0.8); }
            to { opacity: 1; transform: scale(1); }
        }

        .yes {
            background: red;
            color: white;
        }

        .no {
            background: white;
            color: red;
            border: 2px solid red;
        }

        .no:hover {
            background: red;
            color: white;
        }

        .message {
            font-size: 16px;
            color: red;
            margin-top: 20px;
            display: none;
            animation: messageAnimation 3s ease-in-out;
        }

        @keyframes messageAnimation {
            0% { opacity: 0; transform: scale(0.5); }
            50% { opacity: 1; transform: scale(1.2); }
            100% { opacity: 1; transform: scale(1); }
        }

        .message.first {
            font-size: 20px;
            color: #ff6b81;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            opacity: 0;
            animation: centerMessage 2s forwards;
        }

        @keyframes centerMessage {
            from { opacity: 0; transform: translate(-50%, -50%) scale(0.5); }
            to { opacity: 1; transform: translate(-50%, -50%) scale(1); }
        }
    </style>
